<div class="container">
  <h1>Restaurants</h1>
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant), class: 'text-decoration-none' do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= restaurant.name %>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'Add restaurant', new_restaurant_path, class: 'btn btn-primary'  %>
</div>
