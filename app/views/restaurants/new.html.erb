<div class="container mt-3">
  <h1> Add restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES.sort, include_blank: false%>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
